<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:medicine_tracker"
             xmlns:converters="clr-namespace:medicine_tracker.Converters"
             x:Class="medicine_tracker.App">
    <Application.Resources>
        <ResourceDictionary>
			<converters:BooleanToTakenColorsConverter x:Key="BooleanToTakenColorsConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
